<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="dokudoki.config.server" />
        <parameter key="dokudoki.config.database" />
        <parameter key="dokudoki.config.collection" />
        <parameter key="dokudoki.config.alias_map" />
    </parameters>

    <services>

        <service id="dokudoki.connector" class="Trismegiste\DokudokiBundle\Persistence\Connector">
            <argument type="collection">
                <argument key="server">%dokudoki.config.server%</argument>
                <argument key="database">%dokudoki.config.database%</argument>
                <argument key="collection">%dokudoki.config.collection%</argument>
            </argument>
        </service>

        <service id="dokudoki.collection" class="MongoCollection"
                 factory-service="dokudoki.connector"
                 factory-method="getCollection"/>


    </services>
</container>